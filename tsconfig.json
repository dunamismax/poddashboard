{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "types": ["bun", "node"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    ".nuxt/nuxt.d.ts",
    "app",
    "backend",
    "server",
    "db",
    "scripts",
    "nuxt.config.ts",
    "drizzle.config.ts"
  ]
}
