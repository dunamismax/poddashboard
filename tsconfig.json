{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["bun", "node", "vite/client"],
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@db/*": ["./db/*"]
    }
  },
  "include": [
    "app",
    "server",
    "db",
    "scripts",
    "react-router.config.ts",
    "vite.config.ts",
    "drizzle.config.ts"
  ]
}
