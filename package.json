{
  "name": "poddashboard",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -c \"#f59e0b,#0ea5e9\" \"\\\"$npm_execpath\\\" run dev:api\" \"\\\"$npm_execpath\\\" run dev:web\" --names=api,web",
    "dev:api": "\"$npm_execpath\" run --watch backend/index.ts",
    "dev:web": "react-router dev --port 3000",
    "build": "react-router build",
    "start": "concurrently -c \"#f59e0b,#0ea5e9\" \"\\\"$npm_execpath\\\" run start:api\" \"\\\"$npm_execpath\\\" run start:web\" --names=api,web",
    "start:api": "\"$npm_execpath\" run backend/index.ts",
    "start:web": "react-router-serve ./build/server/index.js",
    "lint": "biome check .",
    "format": "biome format --write .",
    "smoke": "\"$npm_execpath\" run scripts/smoke.ts",
    "typecheck": "react-router typegen && tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "\"$npm_execpath\" run db/migrate.ts",
    "db:seed": "\"$npm_execpath\" run db/seed.ts",
    "scry:doctor": "\"$npm_execpath\" run scripts/cli.ts doctor"
  },
  "dependencies": {
    "@auth/core": "^0.41.0",
    "@auth/drizzle-adapter": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "@react-router/node": "^7.6.2",
    "react-router": "^7.6.2",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.12",
    "zod": "^4.1.11",
    "isbot": "^5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@react-router/dev": "^7.6.2",
    "@react-router/serve": "^7.6.2",
    "@tailwindcss/vite": "^4.1.12",
    "@types/bun": "^1.2.22",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.9.2",
    "vite": "^6.3.5"
  }
}
