{
  "name": "poddashboard",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -c \"#f59e0b,#0ea5e9\" \"\\\"$npm_execpath\\\" run dev:api\" \"\\\"$npm_execpath\\\" run dev:web\" --names=api,web",
    "dev:api": "\"$npm_execpath\" run --watch backend/index.ts",
    "dev:web": "react-router dev --port 3000",
    "build": "react-router build",
    "start": "concurrently -c \"#f59e0b,#0ea5e9\" \"\\\"$npm_execpath\\\" run start:api\" \"\\\"$npm_execpath\\\" run start:web\" --names=api,web",
    "start:api": "\"$npm_execpath\" run backend/index.ts",
    "start:web": "react-router-serve ./build/server/index.js",
    "lint": "biome check .",
    "format": "biome format --write .",
    "smoke": "\"$npm_execpath\" run scripts/smoke.ts",
    "typecheck": "react-router typegen && tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "\"$npm_execpath\" run db/migrate.ts",
    "db:seed": "\"$npm_execpath\" run db/seed.ts",
    "scry:doctor": "\"$npm_execpath\" run scripts/cli.ts doctor"
  },
  "dependencies": {
    "@react-router/node": "^7.13.1",
    "@tanstack/react-query": "^5.90.21",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.5.0",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "drizzle-orm": "^0.45.1",
    "isbot": "^5.1.35",
    "pg": "^8.19.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "^7.13.1",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@react-router/dev": "^7.13.1",
    "@react-router/serve": "^7.13.1",
    "@tailwindcss/vite": "^4.2.1",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.3.3",
    "@types/pg": "^8.18.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
